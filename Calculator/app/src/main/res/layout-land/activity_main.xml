<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="raienryu.calculator.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="10"
        android:id="@+id/e1"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:enabled="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/b9"
        android:layout_alignEnd="@+id/b7"
        android:layout_above="@+id/clc" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:text="."
        android:id="@+id/b"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textSize="22dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:text="0"
        android:id="@+id/b0"
        android:layout_alignBottom="@+id/b"
        android:layout_toEndOf="@+id/b"
        android:textSize="22dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:text="="
        android:id="@+id/be"
        android:layout_alignBottom="@+id/b0"
        android:layout_toEndOf="@+id/b0"
        android:textSize="22dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:text="+"
        android:id="@+id/add"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/be"
        android:textSize="22dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:text="1"
        android:id="@+id/b1"
        android:layout_above="@+id/b"
        android:layout_alignParentStart="true"
        android:textSize="22dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:text="2"
        android:id="@+id/b2"
        android:layout_above="@+id/b"
        android:layout_toEndOf="@+id/b1"
        android:textSize="22dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:text="3"
        android:id="@+id/b3"
        android:layout_alignTop="@+id/b2"
        android:layout_toEndOf="@+id/b2"
        android:textSize="22dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:text="-"
        android:id="@+id/sub"
        android:layout_alignTop="@+id/b3"
        android:layout_toEndOf="@+id/be"
        android:textSize="22dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:text="4"
        android:id="@+id/b4"
        android:layout_above="@+id/b1"
        android:layout_alignParentStart="true"
        android:textSize="22dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:text="5"
        android:id="@+id/b5"
        android:layout_alignBottom="@+id/b4"
        android:layout_toEndOf="@+id/b4"
        android:textSize="22dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:text="6"
        android:id="@+id/b6"
        android:layout_above="@+id/b3"
        android:layout_toEndOf="@+id/b5"
        android:textSize="22dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:text="X"
        android:id="@+id/mult"
        android:layout_alignTop="@+id/b6"
        android:layout_toEndOf="@+id/b3"
        android:textSize="22dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:text="7"
        android:id="@+id/b7"
        android:layout_above="@+id/b4"
        android:layout_alignParentStart="true"
        android:textSize="22dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:text="8"
        android:id="@+id/b8"
        android:layout_above="@+id/b5"
        android:layout_toEndOf="@+id/b7"
        android:textSize="22dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:text="9"
        android:id="@+id/b9"
        android:layout_above="@+id/b6"
        android:layout_toEndOf="@+id/b8"
        android:textSize="22dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:text="/"
        android:id="@+id/div"
        android:layout_alignTop="@+id/b9"
        android:layout_alignStart="@+id/mult"
        android:textSize="22dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/clc"
        android:layout_above="@+id/b7"
        android:layout_alignParentStart="true"
        android:textSize="22dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:ems="10"
        android:id="@+id/e2"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:enabled="true"
        android:layout_above="@+id/clc"
        android:layout_alignStart="@+id/b9"
        android:layout_toStartOf="@+id/div" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:ems="10"
        android:id="@+id/op"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:enabled="true"
        android:layout_above="@+id/clc"
        android:layout_alignStart="@+id/b8"
        android:layout_alignEnd="@+id/b8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:ems="10"
        android:id="@+id/res"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:enabled="true"
        android:layout_above="@+id/clc"
        android:layout_alignEnd="@+id/clc"
        android:layout_toEndOf="@+id/e2" />

</RelativeLayout>
